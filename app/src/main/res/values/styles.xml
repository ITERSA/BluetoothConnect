<resources>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Graph">
        <item name="titleTextSize">14sp</item>
        <item name="rangeTitleTextSize">14sp</item>
        <item name="domainTitleTextSize">14sp</item>
        <item name="graphMarginBottom">0dp</item>
        <item name="graphMarginLeft">5dp</item>
        <item name="backgroundColor">@color/ap_transparent</item>
        <item name="graphBackgroundColor">@color/ap_transparent</item>
        <item name="gridBackgroundColor">@color/ap_transparent</item>
        <item name="domainLineColor">@color/ap_black</item>
        <item name="rangeLineColor">@color/ap_black</item>
        <item name="lineLabelTextColorTop">@color/ap_black</item>
        <item name="lineLabelTextColorBottom">@color/ap_black</item>
        <item name="lineLabelTextColorLeft">@color/ap_black</item>
        <item name="lineLabelTextColorRight">@color/ap_black</item>
        <item name="domainOriginLineColor">@color/ap_black</item>
        <item name="rangeOriginLineColor">@color/ap_black</item>
        <item name="titleTextColor">@color/ap_black</item>
        <item name="domainTitleTextColor">@color/ap_black</item>
        <item name="rangeTitleTextColor">@color/ap_black</item>
        <item name="legendTextColor">@color/ap_black</item>
        <item name="graphMarginRight">8dp</item>
        <item name="domainLineThickness">0.5dp</item>
        <item name="rangeLineThickness">0.5dp</item>
        <item name="domainOriginLineThickness">1dp</item>
        <item name="rangeOriginLineThickness">1dp</item>
        <item name="legendTextSize">14sp</item>
        <item name="legendIconHeight">14dp</item>
        <item name="legendIconWidth">14dp</item>
        <item name="legendHeight">20dp</item>
        <item name="legendAnchor">right_bottom</item>
        <item name="borderColor">@color/ap_transparent</item>
        <item name="gridInsetTop">10dp</item>
        <item name="gridInsetBottom">30dp</item>
        <item name="gridInsetLeft">25dp</item>
        <item name="gridInsetRight">1dp</item>
        <item name="lineLabels">left|bottom</item>
        <item name="lineLabelInsetTop">1dp</item>
        <item name="lineLabelInsetBottom">10dp</item>
        <item name="lineLabelInsetLeft">20dp</item>
        <item name="lineLabelInsetRight">1dp</item>
        <item name="lineLabelTextSizeTop">12sp</item>
        <item name="lineLabelTextSizeBottom">12sp</item>
        <item name="lineLabelTextSizeLeft">12sp</item>
        <item name="lineLabelTextSizeRight">12sp</item>
        <item name="lineLabelAlignLeft">right</item>
        <item name="lineLabelAlignRight">left</item>
        <item name="lineLabelAlignTop">left</item>
        <item name="lineLabelAlignBottom">right</item>
        <item name="lineExtensionLeft">3dp</item>
        <item name="lineExtensionBottom">3dp</item>
    </style>

</resources>
