<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tvGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/plot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPress"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/my_border_white"
        android:gravity="center_vertical|center_horizontal|center"
        android:minWidth="35dp"
        android:padding="5dp"
        android:text="@string/none"
        android:textColor="@color/ap_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGroup"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGroup" />

    <TextView
        android:id="@+id/tvTemp"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/my_border_white"
        android:gravity="center_vertical|center_horizontal|center"
        android:minWidth="35dp"
        android:padding="5dp"
        android:text="@string/c"
        android:textColor="@color/ap_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGroup"
        app:layout_constraintEnd_toStartOf="@+id/tvBat"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvPress"
        app:layout_constraintTop_toTopOf="@+id/tvGroup" />

    <TextView
        android:id="@+id/tvBat"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/my_border_white"
        android:gravity="center_vertical|center_horizontal|center"
        android:minWidth="35dp"
        android:padding="5dp"
        android:text="@string/v"
        android:textColor="@color/ap_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGroup"
        app:layout_constraintEnd_toStartOf="@+id/tvCurrentVal"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/tvCurrentVal"
        app:layout_constraintStart_toEndOf="@+id/tvTemp"
        app:layout_constraintTop_toTopOf="@+id/tvGroup" />

    <TextView
        android:id="@+id/tvCurrentVal"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/my_border_white"
        android:gravity="center_vertical|center_horizontal|center"
        android:minWidth="35dp"
        android:padding="5dp"
        android:textColor="@color/ap_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGroup"
        app:layout_constraintEnd_toEndOf="@+id/tvGroup"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toRightOf="@+id/tvBat"
        app:layout_constraintRight_toRightOf="@+id/tvGroup"
        app:layout_constraintStart_toEndOf="@+id/tvBat"
        app:layout_constraintTop_toTopOf="@+id/tvGroup" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/plot"
        style="@style/Graph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/controlsGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGroup"
        app:lineLabels="left|bottom"
        app:markupEnabled="false"
        app:rangeTitle=""
        app:renderMode="use_background_thread"
        app:title="" />

    <android.support.constraint.Group
        android:id="@+id/controlsGroup"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:constraint_referenced_ids="spinner, toggleRecording, btOptions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plot" />

    <Spinner
        android:id="@+id/spinner"
        android:background="@drawable/my_spinner_up_black"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/toggleRecording"
        android:layout_centerInParent="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:entries="@array/items_name"
        app:layout_constraintBottom_toBottomOf="@+id/controlsGroup"
        app:layout_constraintEnd_toStartOf="@+id/btOptions"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/controlsGroup"
        app:layout_constraintRight_toLeftOf="@+id/btOptions"
        app:layout_constraintStart_toStartOf="@+id/controlsGroup"
        app:layout_constraintTop_toTopOf="@+id/controlsGroup" />

    <Button
        android:id="@+id/btOptions"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/my_button"
        android:drawableLeft="@drawable/ic_save_white_24dp"
        android:drawableStart="@drawable/ic_save_white_24dp"
        android:enabled="false"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="@string/save"
        android:textColor="@color/ap_white"
        app:layout_constraintBottom_toBottomOf="@+id/controlsGroup"
        app:layout_constraintEnd_toStartOf="@+id/toggleRecording"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/spinner"
        app:layout_constraintRight_toLeftOf="@+id/toggleRecording"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="@+id/controlsGroup" />

    <ToggleButton
        android:id="@+id/toggleRecording"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/my_button_active"
        android:checked="false"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:drawableStart="@android:drawable/ic_media_play"
        android:text="@string/report"
        android:textColor="@color/ap_white"
        android:textOff="@string/play"
        android:textOn="@string/pause"
        app:layout_constraintBottom_toBottomOf="@+id/controlsGroup"
        app:layout_constraintEnd_toEndOf="@+id/controlsGroup"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/btOptions"
        app:layout_constraintRight_toRightOf="@+id/controlsGroup"
        app:layout_constraintStart_toEndOf="@+id/btOptions"
        app:layout_constraintTop_toTopOf="@+id/controlsGroup" />

</android.support.constraint.ConstraintLayout>